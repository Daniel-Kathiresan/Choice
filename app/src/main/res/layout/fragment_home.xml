<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#627C79"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/imageViewMatching"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:contentDescription="Start Matching"
        android:src="@drawable/rounded_edittext_intro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/imageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Start Matching"
        android:textColor="@color/dark_grey"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewMatching"
        app:layout_constraintEnd_toEndOf="@+id/imageViewMatching"
        app:layout_constraintStart_toStartOf="@+id/imageViewMatching"
        app:layout_constraintTop_toTopOf="@+id/imageViewMatching" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:layout_gravity=""
        android:layout_marginTop="56dp"
        android:text="Recommended Time: "
        android:textColor="@color/dark_grey"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMatching" />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:layout_gravity=""
        android:text="Recommended Location: "
        android:textColor="@color/dark_grey"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.345"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTime"
        app:layout_constraintVertical_bias="0.29" />


</androidx.constraintlayout.widget.ConstraintLayout>